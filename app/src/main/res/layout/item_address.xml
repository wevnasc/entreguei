<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/city_and_state_text"
            style="@style/TitlePrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:transitionName="city_and_state"
            tools:text="SÃ£o Paulo - SP" />


        <TextView
            style="@style/TextPrimary"
            android:id="@+id/neighborhood_text"
            android:transitionName="neighborhood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Socorro"/>

        <TextView
            style="@style/TextPrimary"
            android:id="@+id/cep_text"
            android:transitionName="cep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="00000-050"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
