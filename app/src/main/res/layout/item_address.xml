<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/city_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="SÃ£o Paulo"/>

        <TextView
            android:id="@+id/separator_text"
            android:layout_toEndOf="@id/city_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text=" - "/>

        <TextView
            android:layout_toEndOf="@id/separator_text"
            android:id="@+id/state_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="SP"/>

        <TextView
            android:layout_below="@+id/city_text"
            android:id="@+id/neighborhood_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Socorro"/>

        <TextView
            android:layout_below="@id/neighborhood_text"
            android:id="@+id/cep_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="00000-050"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
