<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:orientation="vertical">

        <TextView
            style="@style/TitleSecondary"
            android:id="@+id/city_text"
            android:transitionName="city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="SÃ£o Paulo"/>

        <TextView
            style="@style/TitleSecondary"
            android:transitionName="separator"
            android:id="@+id/separator_text"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:layout_toEndOf="@id/city_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/separator"/>

        <TextView
            style="@style/TitleSecondary"
            android:layout_toEndOf="@id/separator_text"
            android:id="@+id/state_text"
            android:transitionName="state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="SP"/>

        <TextView
            style="@style/TextPrimary"
            android:layout_below="@+id/city_text"
            android:id="@+id/neighborhood_text"
            android:transitionName="neighborhood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Socorro"/>

        <TextView
            style="@style/TextPrimary"
            android:layout_below="@id/neighborhood_text"
            android:id="@+id/cep_text"
            android:transitionName="cep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="00000-050"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
